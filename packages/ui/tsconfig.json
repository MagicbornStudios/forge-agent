{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@forge/ui": ["./src/index.ts"],
      "@forge/ui/*": ["./src/components/ui/*", "./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
