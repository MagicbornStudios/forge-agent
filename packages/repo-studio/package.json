{
  "name": "@forge/repo-studio",
  "version": "0.1.4",
  "description": "A new IDE centered around multiple coding agents, company agnostic but primarily integrated with Codex.",
  "author": "b2gdevs",
  "private": false,
  "type": "module",
  "main": "./src/desktop/main.mjs",
  "bin": {
    "forge-repo-studio": "./src/cli.mjs"
  },
  "files": [
    "src",
    "docs",
    "README.md"
  ],
  "scripts": {
    "build": "node -e \"console.log('repo-studio: no build step (source-distributed mjs)')\"",
    "test": "node --test \"src/__tests__/*.test.mjs\"",
    "desktop:dev": "node src/cli.mjs open --desktop-runtime --foreground",
    "desktop:build": "node src/desktop/build.mjs",
    "desktop:verify:standalone": "node src/desktop/verify-standalone.mjs",
    "desktop:package:win": "node src/desktop/build.mjs --require-standalone && node src/desktop/verify-standalone.mjs && electron-builder --config electron-builder.json --win nsis portable",
    "publish": "npm publish"
  },
  "dependencies": {
    "@openai/codex": "^0.104.0",
    "chokidar": "^4.0.3",
    "yaml": "^2.8.1"
  },
  "optionalDependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  }
}
