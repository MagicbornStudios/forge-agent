{
  "appId": "com.forge.repostudio",
  "productName": "RepoStudio",
  "directories": {
    "output": "dist/desktop"
  },
  "files": [
    "src/desktop/**",
    "src/core/runtime/**",
    "src/security/**",
    "src/lib/**",
    "package.json"
  ],
  "extraResources": [
    {
      "from": ".desktop-build/next",
      "to": "next"
    }
  ],
  "win": {
    "signAndEditExecutable": false,
    "target": [
      "nsis",
      "portable"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "runAfterFinish": true
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }
}
