{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@forge/shared": ["./src/index.ts"],
      "@forge/shared/*": ["./src/shared/*"],
      "@forge/ui": ["../ui/src/index.ts"],
      "@forge/ui/*": ["../ui/src/components/ui/*", "../ui/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
