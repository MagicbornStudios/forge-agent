{
  "name": "@forge/repo-studio-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/reset-dev-db.mjs && concurrently \"next dev --turbopack -p 3010\" \"drizzle-kit studio --port=4983\"",
    "dev:next": "next dev --turbopack -p 3010",
    "build": "pnpm run codegen && next build",
    "codegen": "node --import tsx ../../packages/forge-codegen/cli.mjs all --config forge-codegen.config.mjs",
    "check:codegen": "pnpm run codegen && git diff --exit-code src/lib/app-spec.generated.ts || (echo 'Generated files are out of date. Commit the changes or run pnpm run codegen.' && exit 1)",
    "start": "next start -p 3010",
    "lint": "next lint --max-warnings 0",
    "test:settings-codegen": "node --import tsx --test \"__tests__/settings/*.test.mjs\"",
    "test:api": "node --import tsx --test \"__tests__/api/*.test.mjs\"",
    "test:styles": "node --import tsx --test \"__tests__/styles/*.test.mjs\"",
    "test:repo-search": "node --import tsx --test \"__tests__/repo-search/*.test.mjs\"",
    "test:review-queue": "node --import tsx --test \"__tests__/review-queue/*.test.mjs\"",
    "check:direct-fetch": "node scripts/check-direct-fetch.mjs",
    "check:direct-fetch:strict": "node scripts/check-direct-fetch.mjs --strict",
    "extensions:registry:health": "node scripts/check-extension-registry.mjs",
    "db:reset-dev": "node scripts/reset-dev-db.mjs",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio --port=4983"
  },
  "dependencies": {
    "@headless-tree/core": "^1.6.3",
    "@headless-tree/react": "^1.6.3",
    "@monaco-editor/react": "^4.7.0",
    "@ai-sdk/openai": "^3.0.25",
    "ai": "^6.0.34",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "@assistant-ui/react": "^0.12.9",
    "@assistant-ui/react-ai-sdk": "^1.3.6",
    "@forge/repo-studio-extension-adapters": "workspace:*",
    "@forge/shared": "workspace:*",
    "@forge/ui": "workspace:*",
    "@payloadcms/db-sqlite": "^3.0.0",
    "@payloadcms/next": "^3.74.0",
    "cli-color": "^2.0.4",
    "dockview": "^1.16.3",
    "lucide-react": "^0.468.0",
    "next": "15.5.9",
    "node-pty": "^1.0.0",
    "payload": "^3.74.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@forge/forge-codegen": "workspace:*",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.30.0",
    "drizzle-orm": "^0.38.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.9",
    "postcss": "8.4.49",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5"
  }
}
