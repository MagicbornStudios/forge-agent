{
  "name": "forge-agent",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "dev": "pnpm --filter @forge/studio dev",
    "dev:studio": "pnpm --filter @forge/studio dev",
    "dev:marketing": "pnpm --filter @forge/marketing dev",
    "build": "pnpm --filter @forge/studio build",
    "build:packages": "pnpm --filter @forge/ui run build && pnpm --filter @forge/shared run build && pnpm --filter @forge/agent-engine run build && pnpm --filter @forge/dev-kit run build",
    "start": "pnpm --filter @forge/studio start",
    "lint": "pnpm --filter @forge/studio lint",
    "test": "pnpm --filter @forge/studio test",
    "payload:types": "pnpm --filter @forge/studio payload:types",
    "registry:start": "verdaccio --config ./verdaccio.yaml"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "verdaccio": "^5.30.0"
  }
}
